{
  "name": "szabokarlo/empoyee-system",
  "description": "Application employee system",
  "license": "MIT",
  "authors": [
    {
      "name": "Károly Szabó",
      "email": "szabokarlo@gmail.com"
    }
  ],
  "require": {
    "php": "^7.4",
    "ext-json": "*",
    "ext-pdo": "*",
    "monolog/monolog": "^2.1",
    "php-di/php-di": "^6.2",
    "phpunit/phpunit": "^9.2",
    "slim/psr7": "^1.1",
    "slim/slim": "^4.5",
    "webmozart/assert": "^1.9"
  },
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --configuration phpunit.xml",
    "display-coverage": "phpunit --coverage-text --configuration phpunit.xml",
    "html-coverage": "phpunit --coverage-html=coverage --configuration phpunit.xml"
  }
}
